---
interface Props {
    titre: string;
    descriptif: string;
    imageUrl: string;
    projectId: string;
}

const { titre, descriptif, imageUrl, projectId } = Astro.props;
---

<div class="rounded-3xl overflow-hidden shadow-xl transition-transform duration-300 bg-[#3B2E2F] h-full flex flex-col">
    
    <div class="p-6">
        <img 
            src={imageUrl}
            alt={titre}
            class="w-full h-64 object-cover rounded-2xl"
        />
    </div>

    <div class="px-6 pb-8 flex-1 flex flex-col">
        <h3 class="text-2xl font-bold text-white mb-4 leading-tight">
            {titre}
        </h3>
        
        <p class="text-white text-base leading-relaxed mb-6 opacity-90 flex-1">
            {descriptif}
        </p>

        <div class="mt-auto">
            <a 
                href={`/projets/${projectId}`}
                class="inline-block px-8 py-3 border-2 border-white text-white rounded-full font-medium hover:bg-white hover:text-gray-800 transition-all duration-300"
            >
                En savoir plus
            </a>
        </div>
    </div>
</div>
