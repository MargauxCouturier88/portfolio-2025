---
import Logo from "../assets/logo.svg";
---
<header>
    <nav class="bg-[#3d2e28] py-4 px-6">
        <div class="max-w-7xl mx-auto">
            <ul class="hidden lg:flex items-center justify-center gap-8 lg:gap-12">
                <li>
                    <a
                        href="/illustratrice"
                        class="text-[#e8d5c4] hover:text-white transition-colors text-base lg:text-lg font-light"
                    >
                        Devenir illustratrice
                    </a>
                </li>
                <li>
                    <a
                        href="/parcours"
                        class="text-[#e8d5c4] hover:text-white transition-colors text-base lg:text-lg font-light"
                    >
                        Mon Parcours
                    </a>
                </li>

                <li class="mx-6">
                    <a
                        href="/"
                        class="flex items-center hover:opacity-90 transition-opacity"
                    >
                        <Logo width="60" height="60" class="drop-shadow-md" />
                    </a>
                </li>

                <li class="relative">
                    <button
                        id="dropdown-toggle"
                        class="text-[#e8d5c4] hover:text-white transition-colors text-base lg:text-lg font-light flex items-center gap-1"
                    >
                        Mes Projets
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    <ul
                        id="dropdown-menu"
                        class="hidden absolute bg-[#3d2e28] rounded-lg shadow-xl mt-2 py-2 w-72 z-50 border border-[#5a4a42]"
                    >
                        <li>
                            <a
                                href="../../projets/gk7jq3ug0spx1ug"
                                class="block px-4 py-2 text-[#e8d5c4] hover:bg-[#4a3932] hover:text-white transition-colors text-sm"
                            >
                                Design évènementiel DJ
                            </a>
                        </li>
                        <li>
                            <a
                                href="../../projets/1v5hpopyd67snk3"
                                class="block px-4 py-2 text-[#e8d5c4] hover:bg-[#4a3932] hover:text-white transition-colors text-sm"
                            >
                                Conception d'un logo éthique et modulable
                            </a>
                        </li>
                        <li>
                            <a
                                href="../../projets/byxjz8r14fd9wv1"
                                class="block px-4 py-2 text-[#e8d5c4] hover:bg-[#4a3932] hover:text-white transition-colors text-sm"
                            >
                                Création d'une bande dessinée fantastique
                            </a>
                        </li>
                        <li>
                            <a
                                href="../../projets/l4chib2jb7yyltn"
                                class="block px-4 py-2 text-[#e8d5c4] hover:bg-[#4a3932] hover:text-white transition-colors text-sm"
                            >
                                Rencontre avec un professionnel
                            </a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a
                        href="/contact"
                        class="text-[#e8d5c4] hover:text-white transition-colors text-base lg:text-lg font-light"
                    >
                        Contact
                    </a>
                </li>
            </ul>


            <div class="lg:hidden flex items-center justify-between">
                <a href="/" class="flex items-center">
                    <Logo width={50} height={50} class="drop-shadow-md" />
                </a>

                <button
                    id="mobile-menu-toggle"
                    class="text-[#e8d5c4] hover:text-white transition-colors"
                    aria-label="Menu"
                >
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>

            <ul id="mobile-menu" class="hidden lg:hidden flex-col gap-4 mt-4 pb-4">
                <li>
                    <a
                        href="/illustratrice"
                        class="block text-[#e8d5c4] hover:text-white transition-colors text-base font-light py-2"
                    >
                        Devenir illustratrice
                    </a>
                </li>
                <li>
                    <a
                        href="/parcours"
                        class="block text-[#e8d5c4] hover:text-white transition-colors text-base font-light py-2"
                    >
                        Mon Parcours
                    </a>
                </li>
                <li>
                    <button
                        id="mobile-dropdown-toggle"
                        class="w-full text-left text-[#e8d5c4] hover:text-white transition-colors text-base font-light flex items-center justify-between py-2"
                    >
                        Mes Projets
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    <ul id="mobile-dropdown-menu" class="hidden pl-4 mt-2 space-y-2">
                        <li>
                            <a href="projets/gk7jq3ug0spx1ug" class="block text-[#e8d5c4] hover:text-white transition-colors text-sm py-1">
                                Design évènementiel DJ
                            </a>
                        </li>
                        <li>
                            <a href="1v5hpopyd67snk3" class="block text-[#e8d5c4] hover:text-white transition-colors text-sm py-1">
                                Conception d'un logo éthique et modulable
                            </a>
                        </li>
                        <li>
                            <a href="byxjz8r14fd9wv1" class="block text-[#e8d5c4] hover:text-white transition-colors text-sm py-1">
                                Création d'une bande dessinée fantastique
                            </a>
                        </li>
                        <li>
                            <a href="#" class="block text-[#e8d5c4] hover:text-white transition-colors text-sm py-1">
                                Rencontre avec un professionnel
                            </a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a
                        href="#"
                        class="block text-[#e8d5c4] hover:text-white transition-colors text-base font-light py-2"
                    >
                        Contact
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</header>

<script>
    const dropdownToggle = document.getElementById("dropdown-toggle");
    const dropdownMenu = document.getElementById("dropdown-menu");

    dropdownToggle?.addEventListener("click", (e) => {
        e.stopPropagation();
        dropdownMenu?.classList.toggle("hidden");
    });

    document.addEventListener("click", (e) => {
        if (
            !dropdownMenu?.contains(e.target as Node) &&
            e.target !== dropdownToggle
        ) {
            dropdownMenu?.classList.add("hidden");
        }
    });

    const mobileMenuToggle = document.getElementById("mobile-menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");

    mobileMenuToggle?.addEventListener("click", () => {
        mobileMenu?.classList.toggle("hidden");
        mobileMenu?.classList.toggle("flex");
    });

    const mobileDropdownToggle = document.getElementById("mobile-dropdown-toggle");
    const mobileDropdownMenu = document.getElementById("mobile-dropdown-menu");

    mobileDropdownToggle?.addEventListener("click", () => {
        mobileDropdownMenu?.classList.toggle("hidden");
    });
</script>
